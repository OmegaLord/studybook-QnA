<% if @answer.errors.present? %>
  <%  @answer.errors.full_messages.each do |message| %>
    $('.answers-errors').html('<%= j message %>');
  <% end %>
<% else %>
  $('.answers').html('<%= j render 'questions/answers' %>');
  $('#answer_body').val('');
  $('#new_answer input').val("");
  $('#new_answer .file:not(:first-child)').remove();
<% end %>
