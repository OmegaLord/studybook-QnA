= button_to 'Add comment', {}, class: 'add_comment'

= form_for [commenter.question, commenter, commenter.comments.build], remote: true,
    html: { class: 'form_comment', id: 'new_comment_answer', style: 'display:none;' } do |f|
  .answer-comment-errors
  = f.label :body, "Your comment"
  = f.text_field :body, id: 'answer_comment_body'
  = f.submit 'Comment'
