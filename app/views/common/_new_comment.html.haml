= button_to 'Add comment', {}, class: 'add_comment'

= form_for [commenter, commenter.comments.build], remote: true, format: :json,
    html: { class: 'form_comment', id: 'new_comment_question', style: 'display:none;' } do |f|
  .comment-errors
  = f.label :body, "Your comment"
  = f.text_field :body, id: 'comment_body'
  = f.submit 'Comment'
